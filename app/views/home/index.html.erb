<div class="container">

  
  <div id="network-update" class="span12">
    <%= form_for(@network_update, :html => {:class => "well span5"}) do |f| %>
      <span style="margin-left:30px; margin-top: 10px; margin-bottom: 10px">
        <h4>What is happening in the world?</h4>
      </span>
      <div class="control-group">
        <%= f.text_field :content, :value => "", :placeholder => "Share links, news, ideas here ...", :size => 100, :class => "update-input span5" %>
      </div>
      <%= submit_tag "Send this", :class => "btn" %>
    <% end %> 
  </div>

  <div class="container">
    <ul>
      <%= @activities.render(self) %>
    </ul>
  </div>
</div>
